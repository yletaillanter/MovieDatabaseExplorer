<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yoannlt.mde.moviedatabaseexplorer">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_app"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activity.MainActivity" />
        <activity android:name=".detailmovie.DetailActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainActivity" />
        </activity>
        <activity android:name=".detailperson.DetailPersonActivity" />
        <activity android:name=".fullscreen.FullScreenImageViewActivity" />
        <activity android:name=".gallery.GalleryActivity" />
        <activity android:name=".popular.PopularActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".advancedSearch.AdvancedSearchActivity"></activity>
    </application>
</manifest>